{
  "name": "digital-hooligan",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "node scripts/bootstrap.mjs",
    "env:check": "node scripts/check-env.mjs",
    "dev:dh": "pnpm --filter digitalhooligan-web dev",
    "dev:penny": "pnpm --filter pennywize-web dev",
    "dev:sneaker": "pnpm --filter dropsignal-web dev",
    "dev:all": "pnpm --parallel --filter digitalhooligan-web --filter pennywize-web --filter dropsignal-web dev",
    "lint": "pnpm -r --filter digitalhooligan-web --filter dropsignal-web lint",
    "build": "pnpm -r --filter digitalhooligan-web --filter dropsignal-web build",
    "typecheck": "pnpm -r --filter digitalhooligan-web --filter dropsignal-web --if-present run typecheck",
    "check": "pnpm lint && pnpm typecheck && pnpm build",
    "lint:all": "pnpm -r lint",
    "build:all": "pnpm -r build",
    "typecheck:all": "pnpm -r --if-present run typecheck",
    "check:all": "pnpm lint:all && pnpm typecheck:all && pnpm build:all",
    "guardrails:shared-primitives": "node scripts/guardrails-shared-primitives.mjs",
    "igr:check": "node scripts/igr/check-igr-0.7.mjs --base origin/main"
  },
  "dependencies": {
    "lucide-react": "^0.555.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "3.4.17",
    "typescript": "^5.9.3"
  }
}
